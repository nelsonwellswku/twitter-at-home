{
  "name": "tah-api",
  "version": "0.0.1",
  "description": "Backend API for Twitter at Home",
  "type": "module",
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "start:dev": "nodemon --watch src -e ts,js,json -x \"pnpm run build && pnpm start\"",
    "clean": "rimraf coverage build tmp",
    "prebuild": "pnpm run lint",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "pnpm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest --coverage",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@apollo/server": "^4.1.1",
    "azure-ad-verify-token": "^3.0.1",
    "graphql": "^16.6.0",
    "jsonwebtoken": "^9.0.0",
    "redis": "^4.6.6",
    "tslib": "~2.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.12",
    "@graphql-codegen/introspection": "2.2.1",
    "@graphql-codegen/typescript": "2.8.2",
    "@graphql-codegen/typescript-resolvers": "2.7.7",
    "@types/jest": "~29.1",
    "@types/node": "~16",
    "@typescript-eslint/eslint-plugin": "~5.39",
    "@typescript-eslint/parser": "~5.39",
    "eslint": "~8.24",
    "eslint-config-prettier": "~8.5",
    "eslint-plugin-jest": "~27.1",
    "jest": "~29.1",
    "nodemon": "^2.0.20",
    "prettier": "~2.7",
    "rimraf": "~3.0",
    "ts-jest": "~29.0",
    "tsc-alias": "^1.7.1",
    "tsutils": "~3.21",
    "typescript": "~4.8"
  },
  "author": "Nelson Wells",
  "license": "MIT",
  "_moduleAliases": {
    "@src": "."
  }
}
